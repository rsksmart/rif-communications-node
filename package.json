    "libp2p-keychain": "0.5.5",
    "libp2p-mplex": "0.8.5",
    "libp2p-secio": "0.11.1",
    "libp2p-webrtc-direct": "0.3.1",
    "libp2p-webrtc-star": "0.16.1",
    "libp2p-websockets": "0.12.4",
    "multiaddr": "6.1.1",
    "multihashing-async": "0.5.2",
    "peer-info": "0.15.1",
    "peer-id": "0.12.5",
    "winston": "^3.2.1",
    "wrtc": "^0.4.2",
    "yargs": "^14.2.2"
