{
  "name": "rcm-libjs",
  "version": "0.1.0",
  "description": "Library for decentralized communication build as part of RIF OS",
  "keywords": [
    "RIF",
    "communication",
    "decentralized",
    "RSK"
  ],
  "homepage": "https://github.com/rsksmart/rcm-libjs",
  "bugs": {
    "url": "https://github.com/rsksmart/rcm-libjs/issues/"
  },
  "license": "MIT",
  "files": [
    "types",
    "lib",
    "dist"
  ],
  "main": "src/index.ts",
  "repository": {
    "type": "git",
    "url": "https://github.com/rsksmart/rcm-libjs.git"
  },
  "scripts": {
    "compile": "tasegir compile",
    "compile:watch": "tasegir compile -- --watch",
    "types-check": "tasegir types-check",
    "exec": "tasegir run",
    "lint": "tasegir lint",
    "release": "tasegir release",
    "build": "tasegir build",
    "test": "tasegir test",
    "test:node": "tasegir test --target node",
    "test:browser": "tasegir test --target browser",
    "start": "tasegir run ./src/index.ts"
  },
  "dependencies": {
    "async": "^3.1.0",
