    "@types/mocha": "^5.2.7",
    "@types/async": "^3.0.3",
    "@types/yargs": "^13.0.3",
    "@typescript-eslint/eslint-plugin": "^2.8.0",
    "@typescript-eslint/parser": "^2.8.0",
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "dirty-chai": "^2.0.1",
    "mocha": "^6.2.2",
    "sinon": "^7.5.0",
    "tasegir": "^1.3.4"
  },
  "engines": {
    "node": ">=10.0.0",
    "npm": ">=6.0.0"
